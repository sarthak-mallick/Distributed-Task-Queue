{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "contracts/kafka/weather-job-v1.schema.json",
  "title": "WeatherJobV1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "job_id",
    "job_type",
    "submitted_at",
    "payload",
    "trace_id"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "1.0"
    },
    "job_id": {
      "type": "string",
      "format": "uuid"
    },
    "job_type": {
      "type": "string",
      "const": "weather"
    },
    "submitted_at": {
      "type": "string",
      "format": "date-time"
    },
    "trace_id": {
      "type": "string",
      "format": "uuid"
    },
    "payload": {
      "type": "object",
      "additionalProperties": false,
      "required": ["city", "units"],
      "properties": {
        "city": {
          "type": "string",
          "minLength": 1
        },
        "country_code": {
          "type": "string",
          "minLength": 2,
          "maxLength": 2
        },
        "units": {
          "type": "string",
          "enum": ["metric", "imperial"]
        }
      }
    }
  }
}

