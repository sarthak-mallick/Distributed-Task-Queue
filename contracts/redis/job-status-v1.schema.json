{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "contracts/redis/job-status-v1.schema.json",
  "title": "JobStatusV1",
  "description": "Logical representation of Redis hash at key pattern job:{job_id}:status",
  "type": "object",
  "additionalProperties": false,
  "required": ["state", "progress_percent", "updated_at", "message"],
  "properties": {
    "job_id": {
      "type": "string",
      "format": "uuid"
    },
    "trace_id": {
      "type": "string",
      "format": "uuid"
    },
    "state": {
      "type": "string",
      "enum": ["queued", "running", "completed", "failed"]
    },
    "progress_percent": {
      "type": "integer",
      "minimum": 0,
      "maximum": 100
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    },
    "message": {
      "type": "string"
    },
    "error_code": {
      "type": "string"
    },
    "error_message": {
      "type": "string"
    }
  }
}

